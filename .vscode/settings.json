// Place your settings in this file to overwrite default and user settings.
{
	"editor.tabSize": 4,
	"editor.insertSpaces": false, 
	"editor.detectIndentation": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/*.js": {"when": "$(basename).ts"},
		"**/**.js": {"when": "$(basename).ts"}
	}
}